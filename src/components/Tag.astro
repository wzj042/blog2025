---

export interface Props {
  tag: string;
  tagName: string;
  count?: number;
  size?: "sm" | "lg";
}

const { tag, tagName, count, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "relative pe-2 text-lg group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1 focus-visible:no-underline",
      { "text-sm": size === "sm" },
    ]}
  >
    <span>#{tagName}{
      typeof count === "number" && (
        <span class="align-top text-xs">({count})</span>
      )
    }</span>
    
  </a>
</li>
